  <h1><%= @section.name %> Details</h1>

  <button class="btn btn-warning"><%= link_to "Edit #{@section.name}", edit_section_path(@section) %> &nbsp&nbsp</button>
  <button class="btn btn-success"><%=  link_to "Return to Sections", section_path %>&nbsp&nbsp</button>
  <%= link_to "Delete  #{@section.name}", section_path(@section), class: "btn btn-danger", color: '#FFFFC0',
                            :data => {:confirm => "Really?",
                            :method => "delete"} %>
  <hr>
  <%if @section.lessons.any? %>
    <h3>Lessons in this Section:</h3>

    <ul>
      <% @section.lessons.each do |lesson| %>
        <li><%= link_to lesson.name, section_lesson_path(@section,lesson)%></li>
      <% end %>
    </ul>
  <% else %>
    <h3>There are no lessons in this category yet.</h3>
  <% end %>

  <br>
  <p><%= link_to "Add a Lesson", new_section_lesson_path(@section) %></p>
